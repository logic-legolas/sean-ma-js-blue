      <script>
        function myFunction() {
          var adj1 = prompt("Enter an adjective.");
          var adj2 = prompt("Enter an adjective.");
          var tob = prompt("Enter a type of bird.");
          var room = prompt("Enter a room in the house.");
          var vrb1 = prompt("Enter a past tense verb");
          var vrb2 = prompt("Enter a verb.");
          var rn = prompt("Enter a relative's name.");
          var adj3 = prompt("Enter an adjective.");
          var non1 = prompt("Enter a noun.");
          var lqd = prompt("Enter a liquid.");
          var bdyprt = prompt("Enter a plural body part.");
          var non2 = prompt("Enter a plural noun.");
          var vrb3 = prompt("Enter a verb ending in -ing.");
          var non3 = prompt("Enter a noun.");
          if (adj1 != null, adj2 != null, tob != null, room != null, vrb1 != null, vrb2 != null, rn != null, adj3 != null, non1 != null, lqd != null, bdyprt != null, vrb3 != null, non2 != null){
          document.getElementById('text').innerHTML = "It was a"+ adj1 +", cold November day. I woke up to the "+ adj2 +" smell of " + tob + " roasting in the "+ room +" downstairs. I "+ vrb1 +" down the stairs to see if I could help "+ vrb2 +" the dinner. My mom said, 'See if " + rn + " needs a fresh "+ non1 +".' So I carried a tray of glassed full of "+ lqd +" into the rooom. When I got there, I couldn't belive my " + bdyprt +"! There were " + non2 +" "+ vrb3 +" on the "+ non3 +"!"
        }
      }
